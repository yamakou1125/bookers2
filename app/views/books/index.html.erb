<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
      
      <table class="table">
        <tbody>
          <tr>
	          <th>name</th> <th><%= @user.name %></th>
          </tr>
          <tr>
	        <th>introduction</th> <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
ã€€
      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
  
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
  
      <form>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title, class: "form-control" %>
        </div>
  
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body, class: "form-control" %>
        </div>
  
        <div class="form-group">
          <%= f.submit 'Create Book', class:'btn btn-success' %>
        </div>
      <% end %>
      </form>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
        </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
            <% end %>
            </td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>