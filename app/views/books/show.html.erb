<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">


<%= render 'books/userinfo', user: @user %>

    </div>
    
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              <br><%= @user.name %>
              <% end %>
            </td>
          
            <td>
              <%= link_to book_path(@book_ditail.id) do %>
              <%= @book_ditail.title %>
              <% end %>
            </td>
          
            <td>
              <%= @book_ditail.body %>
            </td>
            
            <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book_ditail.id), class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
            
            <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Destroy", book_path(@book_ditail.id), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "本当に消しますか？"} %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>